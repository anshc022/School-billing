# Environment Variables (create .env.local in root)

# Database
DATABASE_URL=file:./database/school.db

# App Configuration
VITE_SCHOOL_NAME=Your School Name
VITE_SCHOOL_ADDRESS=123 School Road, City
VITE_SCHOOL_PHONE=+91-9876543210
VITE_SCHOOL_EMAIL=admin@school.com

# Currency Settings
VITE_CURRENCY=INR
VITE_CURRENCY_SYMBOL=â‚¹

# Feature Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_EXPORT=true
VITE_ENABLE_PRINT=true
VITE_ENABLE_PDF=true

# API
VITE_API_URL=http://localhost:3000
VITE_API_TIMEOUT=30000

# Database Connection Pool (optional)
DATABASE_CONNECTION_LIMIT=5

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# PDF Settings
PDF_QUALITY=300
PDF_MARGIN=50
PDF_PAGE_SIZE=A4
PDF_ORIENTATION=portrait

# Print Settings
PRINT_TO_PDF=true
DIRECT_PRINT_ENABLED=true
DEFAULT_PRINTER=

# Backup Settings
AUTO_BACKUP_ENABLED=true
AUTO_BACKUP_INTERVAL=86400000
BACKUP_DIR=./backups

# Security
PASSWORD_MIN_LENGTH=6
SESSION_TIMEOUT=3600000
ENABLE_AUDIT_LOG=true
